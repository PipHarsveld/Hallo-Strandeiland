<main>
    <h2>Wensen</h2>
    <p>Bekijk hier de wensen die mensen hebben ingestuurd voor de nieuwe wijk Strandeiland</p>
    <a href="#" class="ctaBtn">Deel een wens</a>

    <section class="filterBar">
        <div>
            <p>250</p>
            <p>wensen</p>
        </div>
        <button>
            <img src="/public/images/icon_filter.svg" alt="Filteren">
            <span>Thema's</span>
        </button>
        <form>
            <input type="text" placeholder="Zoek een wens...">
        </form>
        <form>
            <label class="masonryBtn" for="masonry"><input type="radio" name="layoutCards" value="" checked /></label>
            <label class="gridBtn" for="grid"><input type="radio" name="layoutCards" value="" /></label>
        </form>
    </section>

    {{> themeFilters}}

    <ul class="grid">
        {{#each wensen}}
            {{> wishcard}}
        {{/each}}
    </ul>

</main>