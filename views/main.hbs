<main>
    <h2>Wensen</h2>
    <p>Bekijk hier de wensen die mensen hebben ingestuurd voor de nieuwe wijk Strandeiland</p>
    <a href="#">Deel een wens</a>

    <section class="filterBar">
        <div>
            <p>250</p>
            <p>wensen</p>
        </div>
        <button><img src="/public/images/icon_filter.svg" alt="Filteren">Thema's</button>
        <form>
            <input type="text" placeholder="Zoek een wens...">
        </form>
        <form>
            <label for="masonry"><input type="radio" name="layoutCards" value="" checked /></label>
            <label for="grid"><input type="radio" name="layoutCards" value="" /></label>
        </form>
    </section>

    <ul class="themeFilters">
        <label for="culture">
            <input type="checkbox" name="theme" id="culture" value="Cultuur">Cultuur
        </label>
        <label for="housing">
            <input type="checkbox" name="theme" id="housing" value="Huisvesting">Huisvesting
        </label>
        <label for="infrastructure">
            <input type="checkbox" name="theme" id="infrastructure" value="Infrastructuur">Infrastructuur
        </label>
        <label for="youth">
            <input type="checkbox" name="theme" id="youth" value="Jeugd">Jeugd
        </label>
        <label for="environment">
            <input type="checkbox" name="theme" id="environment" value="Milieu">Milieu
        </label>
        <label for="nature">
            <input type="checkbox" name="theme" id="nature" value="Natuur">Natuur
        </label>
        <label for="education">
            <input type="checkbox" name="theme" id="education" value="Onderwijs">Onderwijs
        </label>
        <label for="recreation">
            <input type="checkbox" name="theme" id="recreation" value="Recreatie">Recreatie
        </label>
        <label for="sport">
            <input type="checkbox" name="theme" id="sport" value="Sport">Sport
        </label>
        <label for="beach">
            <input type="checkbox" name="theme" id="beach" value="Strand">Strand
        </label>
        <label for="safety">
            <input type="checkbox" name="theme" id="safety" value="Veiligheid">Veiligheid
        </label>
        <label for="traffic">
            <input type="checkbox" name="theme" id="traffic" value="Verkeer">Verkeer
        </label>
        <label for="stores">
            <input type="checkbox" name="theme" id="stores" value="Winkels">Winkels
        </label>
        <label for="other">
            <input type="checkbox" name="theme" id="other" value="Overig">Overig
        </label>
    </ul>

    <ul class="grid">
        {{#each wensen}}
        <li class="wishcard">
            <a href="#">
                <section>
                    <img src="../public/images/img_placeholder.png" alt="">
                    <ul class="themaContainer">
                        {{#each themas}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </section>
                <section class="wishcardInfo">
                    <h3>{{this.titel}}</h3>
                    <p>{{this.omschrijving}}</p>
                    <ul class="statistics">
                        <li>
                            <img src="../public/images/icon_steuner.svg">
                            <p>{{this.steuners}}</p>
                        </li>
                        <li>
                            <img src="../public/images/icon_helper.svg">
                            <p>{{this.helpers}}</p>
                        </li>
                        <li>
                            <img src="../public/images/icon_ambassadeur.svg">
                            <p>{{this.ambassadeurs}}</p>
                        </li>
                    </ul>
                    {{!-- <p>Card ID: {{this.id}}</p> --}}
                </section>

            </a>
        </li>
        {{/each}}
    </ul>

</main>